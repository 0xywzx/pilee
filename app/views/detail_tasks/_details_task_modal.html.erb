<%= form_for :detail_task, url: sub_task_detail_task_path(detail_task.sub_task_id, id: detail_task.id), method: "PUT" do |form| %>
  <span><%= form.text_field :text, placeholder: detail_task.text %><span>
  <span><%= form.date_field :date, placeholder: '時間' %><span>
  <%= form.submit "更新" %>
<% end %>
